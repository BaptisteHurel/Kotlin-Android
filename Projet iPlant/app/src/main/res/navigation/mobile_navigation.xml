<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_search">

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.iplant.ui.search.SearchFragment"
        android:label="@string/menu_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_navigation_search_to_detailsFragment"
            app:destination="@id/detailsFragment" />
        <argument android:name="plantName" />
    </fragment>

    <fragment
        android:id="@+id/navigation_favorites"
        android:name="com.iplant.ui.favorites.FavoritesFragment"
        android:label="@string/menu_favorites"
        tools:layout="@layout/fragment_favorites" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.iplant.ui.settings.SettingsFragment"
        android:label="@string/menu_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.iplant.ui.details.DetailsFragment"
        android:label="DetailsFragment" >
        tools:layout="@layout/fragment_details"
        <argument android:name="plantName" />
    </fragment>
    <argument
        android:name="plantName"
        android:defaultValue="String" />
    tools:layout="@layout/fragment_details" />


</navigation>